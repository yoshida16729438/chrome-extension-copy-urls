{
  "manifest_version": 3,
  "name": "copy URLs",
  "description": "copy URLs from opened tabs",
  "version": "1.0.0",
  "action": {
    "default_popup": "src/html/index.html",
    "default_icon": {
      "16": "icon/icon-16.png",
      "32": "icon/icon-32.png"
    }
  },
  "icons": {
    "16": "icon/icon-16.png",
    "48": "icon/icon-48.png",
    "128": "icon/icon-128.png"
  },
  "permissions": ["tabs", "storage", "clipboardRead"],
  "default_locale": "en"
}
